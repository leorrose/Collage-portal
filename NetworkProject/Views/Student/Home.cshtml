@model NetworkProject.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentHome</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:#3AAFA9; color: white;">
    <div class="container">
        <div class="row">
            <h1 class="display-1 text-center"> Welcome Back @Session["name"] @Session["lastName"] </h1>
            <h3 class="display-1 text-center"> @DateTime.Now.ToShortDateString() </h3>
        </div>
        <br />
        <div class="row">
            <div class="col-4">
                <iframe src="@Url.Action("Schedule","Student")" style="width:100%; height:250px; border: 1px solid #17252A;">
                    <p> Your Browser doesnt support iframe please change browser</p>
                </iframe>
                <br />
                <a href="@Url.Action("Schedule","Student")" target="_self" style="color: white"> Full Schedule </a>
            </div>
            <br />
            <div class="col-4">
                <iframe src="@Url.Action("Exams","Student")" style="width:100%; height:250px; border: 1px solid #17252A;">
                    <p> Your Browser doesnt support iframe please change browser</p>
                </iframe>
                <br />
                <a href="@Url.Action("Exams","Student")" target="_self" style="color: white"> Full Exams </a>
            </div>
            <br />
            <div class="col-4">
                <iframe src="@Url.Action("Grades","Student")" style="width:100%; height:250px; border: 1px solid #17252A;">
                    <p> Your Browser doesnt support iframe please change browser</p>
                </iframe>
                <br />
                <a href="@Url.Action("Grades","Student")" target="_self" style="color: white"> Full Grades </a>
            </div>
            <br />
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
